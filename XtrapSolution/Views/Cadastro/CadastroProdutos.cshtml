@{
    ViewBag.Title = "CadastroProdutos";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro Produtos</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/3/w3.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script>
        var app = angular.module("myShoppingList", []);
        app.controller("myCtrl", function($scope) {
            $scope.products = [];
            $scope.addItem = function () {
                $scope.errortext = "";
                if (!$scope.addMe) {return;}
                if ($scope.products.indexOf($scope.addMe) == -1) {
                    $scope.products.push($scope.addMe);
                } else {
                    $scope.errortext = "O item ja existe na sua lista";
                }
            }
            $scope.removeItem = function (x) {
                $scope.errortext = "";
                $scope.products.splice(x, 1);
            }
        });
    </script>
</head>
<body>
    <div class="jumbotron text-center" id="titulo">
         <h1>Cadastro de Produtos</h1>
    </div>
    <fieldset id="campoProd">
        <legend>Dados do Produto</legend>
        <div class="row">
            <div class="col-sm-5 col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">Codigo de Barras: </span>
                    <input type="text" class="form-control" id="cod" placeholder="Codigo de Barras" />
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon">Data de Vencimento:  </span>
                    <input type="date" class="form-control" id="venci" />
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon">Valor da Compra(UN): </span>
                    <input type="number" class="form-control" id="valComp" placeholder="Entre com valor da unidade" />
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon">Valor da Revenda(UN):</span>
                    <input id="valRev" type="number" class="form-control" placeholder="Entre com valor da revenda">
                </div>
                <br />
            </div>
            <div class="col-sm-5 col-sm-offset-2 col-md-6 col-md-offset-0">
                <div id="corpo">
                    <div class="input-group">
                        <span class="input-group-addon">Descrição: </span>
                        <input type="text" class="form-control" id="desc" placeholder="Descrição" />
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Categoria: </span>
                        <select class="form-control" id="listCate">
                            <option>categoria</option>
                        </select>
                        <button ype="button" class="btn btn-info btn-group-sm" data-toggle="modal"
                                data-target="#myModal">+</button>
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Cadastro Categoria</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div id="meuModall" ng-app="myShoppingList" ng-cloak ng-controller="myCtrl" class="w3-card-2 w3-margin" style="max-width:400px;">
                                            <header class="w3-container w3-light-grey w3-padding-16">
                                                <h3>Lista de Categorias</h3>
                                            </header>
                                            <ul class="w3-ul">
                                                <li ng-repeat="x in products" class="w3-padding-16">{{x}}<span ng-click="removeItem($index)" style="cursor:pointer;" class="w3-right w3-margin-right">×</span></li>
                                            </ul>
                                            <div class="w3-container w3-light-grey w3-padding-16">
                                                <div class="w3-row w3-margin-top">
                                                    <div class="w3-col s10">
                                                        <input placeholder="Add itens na lista" ng-model="addMe" class="w3-input w3-border w3-padding">
                                                    </div>
                                                    <div class="w3-col s2">
                                                        <button ng-click="addItem()" class="w3-btn w3-padding w3-green">Add</button>
                                                    </div>
                                                </div>
                                                <p class="w3-padding-left w3-text-red">{{errortext}}</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                        <button id="salvarCat" type="button" class="btn btn-default" data-dismiss="modal">Salvar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Fornecedor: </span>
                        <select class="form-control" id="listForn">
                            <option>fornecedor</option>
                        </select>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Quantidade: </span>
                        <input type="number" class="form-control" id="qnt" placeholder="Entre com a quantidade de produto" />
                    </div>
                    <br />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div id="btnAction">
                    <button id="btnSalvar" type="button" class="btn btn-primary btn-lg">SALVAR</button>
                    <button id="btnCancelar" type="button" class="btn btn-primary btn-lg">CANCELAR</button>
                </div>
            </div>
        </div>
    </fieldset>
</body>
</html>
